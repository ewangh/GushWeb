@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink(User.Identity.Name, "Index", "Settlement")</li>
            <li class="dropdown">
                <a href=" " class="dropdown-toggle" data-toggle="dropdown">
                    @Resources.Resource1.more
                    <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink(@Resources.Resource1.backend, "Index", "Centre")
                    </li>
                    <li>
                        @Html.ActionLink(@Resources.Resource1.dayK, "Index2", "Settlement")
                    </li>
                    <li class="divider"></li>
                    <li>
                        @Html.ActionLink(User.Identity.Name, "Index", "Settlement")
                    </li>
                </ul>
            </li>
            <li><a href="javascript:if (confirm('Logout?'))document.getElementById('logoutLink').click()">@Resources.Resource1.logout</a></li>
            <li>@Html.ActionLink(@Resources.Resource1.logout, "Logout", "Member", new{ },new { id = "logoutLink", style = "display:none" })</li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(@Resources.Resource1.login, "Login", "Member")</li>
        <li>@Html.ActionLink(@Resources.Resource1.register, "#")</li>
    </ul>

}
