@model IEnumerable<t_settlement>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Code }, new { target = "_blank", name = item.Code, onmouseover = "showImg('" + @item.Code + "')" })
        </td>
        <td>
            @ConvertHelper.AmplitudeConvert(item.Price, item.cPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
    </tr>
}
<script>
    function showImg(val) {
        popup.appendImg(val);
    }
</script>