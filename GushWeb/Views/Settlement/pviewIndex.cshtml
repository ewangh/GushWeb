@model IEnumerable<t_settlement>
@using System.Configuration
@{
    var img = ConfigurationManager.AppSettings["ddk"];
}
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.Code }, new { target = "_blank", name = item.Code, onmouseover = "showImg('" + String.Format(img, item.Code) + "')" })
        </td>
        <td>
            @ConvertHelper.AmplitudeConvert(item.Price, item.cPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
    </tr>
}
<script>
    function showImg(url) {
        popup.appendImg(url);
    }
</script>