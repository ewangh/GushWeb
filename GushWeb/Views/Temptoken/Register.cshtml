@model TempToken

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-login">
        <div>
            <div class="input-group">
                @Html.EditorFor(model => model.Email, new { data_val_email = "请输入伊妹儿地址", htmlAttributes = new { @class = "form-control", @placeholder = "ENTER YOUR EMAIL" } })
                <span class="input-group-btn">
                    <input type="submit" value="@Resources.Resource1.register" class="btn btn-primary" />
                </span>
            </div>
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
    <p>
        @Html.ActionLink(@Resources.Resource1.login, "Login")
    </p>
}
