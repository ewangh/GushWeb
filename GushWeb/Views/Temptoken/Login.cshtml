@model TempToken

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-login">
        <div>
            <div class="input-group">
                @Html.EditorFor(model => model.Token, new { htmlAttributes = new { @class = "form-control", @placeholder = "TOKEN", @onKeyUp = "value=value.replace(/[\\W]/g,'')", @maxlength = "6" } })
                <span class="input-group-btn">
                    <input type="submit" value="@Resources.Resource1.login" class="btn btn-primary" />
                </span>
            </div>
                @Html.ValidationMessageFor(model => model.Token, "", new { @class = "text-danger" })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
    <p>
        @Html.ActionLink(@Resources.Resource1.register, "Register")
    </p>
}